<p id="notice"><%= notice %></p>

<h1>Articles</h1>
<div class="container">
  <div class="row">
    <% @articles.each do |article| %>
    <div class="col-3">
      <div class="card-category" style="background-image: 
        linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), 
        url('<%= cl_image_path article.photos[0].key, height: 300, width: 400, crop: :fill if article.photos[0] %>')">
        <%= article.title %>
        <%= article.body %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Article', new_article_path %>